<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <ImageButton
        android:id="@+id/btBuscape"
        android:layout_width="270dp"
        android:layout_height="107dp"
        app:layout_constraintBottom_toTopOf="@+id/btAmazon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buscape" />

    <ImageButton
        android:id="@+id/btAmazon"
        android:layout_width="271dp"
        android:layout_height="109dp"
        android:layout_gravity="center"
        android:text="Amazon"
        app:layout_constraintBottom_toTopOf="@+id/btMagaLu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btBuscape"
        app:srcCompat="@drawable/amazon"
        tools:layout_editor_absoluteY="204dp" />

    <ImageButton
        android:id="@+id/btMagaLu"
        android:layout_width="261dp"
        android:layout_height="109dp"
        android:layout_gravity="center"
        android:text="MagaLu"
        app:layout_constraintBottom_toTopOf="@+id/btSubmarino"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btAmazon"
        app:srcCompat="@drawable/magalu"
        tools:layout_editor_absoluteY="371dp" />

    <ImageButton
        android:id="@+id/btSubmarino"
        android:layout_width="254dp"
        android:layout_height="109dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btMagaLu"
        app:srcCompat="@drawable/submarino" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Sobre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>